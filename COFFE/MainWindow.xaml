<Window x:Class="COFFE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:COFFE"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="437" Background="Beige">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition  Height="280"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Кофейня 'Эмбразуре'" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32" FontWeight="Bold" FontStyle="Italic" Foreground="DarkSlateGray" Height="51"/>

        <TextBox x:Name="Login" Margin="0,34,0,218" Grid.Row="1"/>
        <PasswordBox x:Name="Password" Margin="0,97,0,155" Grid.Row="1"/>

        <Button Content="Авторизоваться" Margin="0,184,0,54" Grid.Row="1" Background="DarkGreen" Click="Button_Click"/>

    </Grid>
</Window>
